{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "review.v1",
  "type": "object",
  "properties": {
    "version": { "type": "string" },
    "generated_at": { "type": "string", "format": "date-time" },
    "open_prs": { "type": "integer" },
    "pending_reviews": { "type": "integer" },
    "last_review": {
      "type": ["object","null"],
      "properties": {
        "pr": { "type": "integer" },
        "reviewer": { "type": "string" },
        "decision": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "additionalProperties": false
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "pr": { "type": "integer" },
          "title": { "type": "string" },
          "status": { "type": "string" },
          "proposer": { "type": "string" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" },
          "reviews": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "reviewer": { "type": "string" },
                "decision": { "type": "string" },
                "timestamp": { "type": "string", "format": "date-time" },
                "comment": { "type": "string" }
              },
              "required": ["reviewer","decision","timestamp"],
              "additionalProperties": false
            }
          }
        },
        "required": ["id","status","created_at"],
        "additionalProperties": false
      }
    }
  },
  "required": ["version","generated_at","open_prs","pending_reviews","items"],
  "additionalProperties": false
}

